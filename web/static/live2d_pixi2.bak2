    // Only open chat window, don't toggle
    if (!chatOpen) {
        chatOpen = true;
        const chatWindow = document.getElementById('chatWindow');
        chatWindow.classList.add('open');
        updateNavIconStates();
        saveWindowLayout();
    }
}

function closeChat() {
    chatOpen = false;
    const chatWindow = document.getElementById('chatWindow');
